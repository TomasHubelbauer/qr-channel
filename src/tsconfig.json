{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,    
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "diagnostics": true,
    "extendedDiagnostics": true,
    "noEmit": true,
    "target": "esnext",
    "alwaysStrict": true,
    "disableSizeLimit": true,
    "listFiles": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "showConfig": true,
    "types": [
      "jsqr",
      "qrcode-generator"
    ]
  },
  "exclude": [
    "src/node_modules"
  ]
}
